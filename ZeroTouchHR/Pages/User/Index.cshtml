@model ZeroTouchHR.Pages.User.IndexModel
@*@model EmployeePhoto*@

@{

}

@*<h2 class="text-info"> User Verification testing from kishore dev</h2>*@


<div class="border container" style="padding:30px">

    <form enctype="multipart/form-data" method="post">

        <input type="hidden" asp-for="Employee.id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="border container" style="padding:40px">


            <div class="form-group row">

                <div class="col-md-5">

                    <label for="First Name">First Name</label>
                    <input asp-for="Employee.FName" class="form-control" placeholder="Enter First Name" readonly />
                    <span asp-validation-for="Employee.FName" class="text-danger"></span>

                </div>

                <div class="col-md-5">

                    <label for="First Name">Last Name</label>
                    <input asp-for="Employee.LName" class="form-control" placeholder="Enter Last Name" readonly />
                    <span asp-validation-for="Employee.LName" class="text-danger"></span>

                </div>

                <div class="col-md-2">

                    <label for="First Name">Title</label>
                    <input asp-for="Employee.title" class="form-control" placeholder="Male/Female/Other" readonly />
                    <span asp-validation-for="Employee.LName" class="text-danger"></span>

                </div>

            </div>

            <div class="form-group row">
                <div class="col-md-12">

                    <label for="First Name">Address Line1</label>
                    <input asp-for="Employee.AddressLine1" class="form-control" placeholder="Enter Address Line1" readonly />
                    <span asp-validation-for="Employee.AddressLine1" class="text-danger"></span>
                </div>


            </div>
            <div class="form-group row">
                <div class="col-md-6">

                    <label for="Address Line 2">Address Line2</label>
                    <input asp-for="Employee.AddressLine2" class="form-control" placeholder="Enter Address Line2" readonly />
                    <span asp-validation-for="Employee.AddressLine2" class="text-danger"></span>
                </div>

                <div class="col-md-6">

                    <label for="Phone Number">Phone Number</label>
                    <input asp-for="Employee.PhoneNumber" class="form-control" placeholder="Enter Phone Number" readonly />
                    <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
                </div>


            </div>



            <div class="form-group row">

                <div class="col-md-5">

                    <label for="City">City</label>
                    <input asp-for="Employee.City" class="form-control" placeholder="Enter City Name" readonly />
                    <span asp-validation-for="Employee.City" class="text-danger"></span>

                </div>

                <div class="col-md-5">

                    <label for="State">State</label>
                    <input asp-for="Employee.State" class="form-control" placeholder="Enter State Name" readonly />
                    <span asp-validation-for="Employee.State" class="text-danger"></span>

                </div>

                <div class="col-md-2">

                    <label for="Zip Code">Zip</label>
                    <input asp-for="Employee.Zip" class="form-control" placeholder="Zip Code" readonly />
                    <span asp-validation-for="Employee.Zip" class="text-danger"></span>

                </div>

            </div>
        </div>
        <div class="border container" style="padding:40px">

            <div class="form-group row">
                <div class="col-md-5">

                    <label for="User Name/ User Email">User Email</label>
                    <input asp-for="Employee.Email" class="form-control" placeholder="Enter User email/name" readonly />
                </div>

                <div class="col-md-5">

                    <label for="Password">Password</label>
                    <input asp-for="Employee.Password" class="form-control" placeholder="Create Password" readonly />
                </div>

                <div class="col-md-2">

                    <label for="Password">User Name</label>
                    <input asp-for="Employee.UserName" class="form-control" placeholder="User Name" readonly />
                </div>

            </div>
        </div>
        <br>
        <div class="form-group row">

            @*<div class="col-3 offset-3">
                    <input type="submit" value="Update" class="btn btn-outline-success" />
                </div>*@
            @*<div class="col-3">

                    <a asp-page="Index" class="btn btn-outline-info">Back To List</a>
                </div>*@
            <div class="form-group">
                <div class="col-md-6">
                    <p>Upload Document for Verification:</p>
                    <input type="file" name="files" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <br>
                    @*<input asp-page-handler="fileUpload" type="submit" value="Upload" />*@
                    <input type="submit" class="btn btn-outline-success" value="Submit" />

                </div>
            </div>
        </div>

    </form>






</div>


@section Scripts{

    <partial name="_validationScriptsPartial" />

}